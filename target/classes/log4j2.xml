<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <!--- Console Appender -->
        <console name="Console" target="SYSTEM_OUT">
            <patternlayout pattern="%d{yyyy-MM-dd HH:mm:ss} [xt] %-5level %C{1}
%msg%n" />
        </console>
        <!-- General File Appender -->
        <file name="FileLogger" filename="logs/app.log" append="true">
            <filters>
                <thresholdfilter level="error" onMatch="DENY" onMismatch="ACCEPT" />
            </filters>
            <patternlayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%] %-5level %{1} - %msg%n" />
        </file>
        <file name="ErrorFileLogger" filename="logs/error.log" append="true">
            <filters>
                <thresholdfilter level="error" onMatch="ACCEPT" onMismatch="DENY" />
            </filters>
            <patternlayout pattern="%d{yyyy-MM-dd HH:mm:ss} [xt] %-5level (1) - %msgn" />
        </file>
    </appenders>
    <loggers>
    <!-- Logger for com.orangehrm (specify the package name here)-->
        <logger name="com.orangehrm" level="trace" additivity="false">
            <appenderref ref="Console" />
            <appenderref ref="FileLogger" />
            <appenderref ref="ErrorFileLogger" />
        </logger>
    </loggers>
</configuration>